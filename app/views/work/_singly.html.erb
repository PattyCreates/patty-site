		<div class="col-sm-12 col-md-10 col-md-offset-1">
			<div class="browser-ui">
				<%= render partial: "partials/browser_circles" %>
				<%= image_tag 'singly/singly-website-one-page-scroll.jpg', class: "img-responsive" %>
			</div>
		</div>
	</div>
